<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

<listener>
  <listener-class>listener.ConnectionPoolListener</listener-class>
</listener>
<display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>gotoreg</servlet-name>
    <jsp-file>/registration.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>servlet.Controller</servlet-class>

  </servlet>

  <servlet-mapping>
    <servlet-name>gotoreg</servlet-name>
    <url-pattern>/gotoreg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/Controller</url-pattern>
  </servlet-mapping>

  <filter>

    <filter-name>Charset Filter</filter-name>
    <filter-class>
        filter.CharsetFilter
    </filter-class>
    <init-param>
      <param-name>requestEncoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>


  </filter>
  <filter-mapping>
    <filter-name> Charset Filter </filter-name>
    <url-pattern>/*</url-pattern>

  </filter-mapping>

</web-app>
